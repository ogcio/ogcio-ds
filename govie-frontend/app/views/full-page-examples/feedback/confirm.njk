{% extends "full-page-example.njk" %}

{% from "panel/macro.njk" import govukPanel %}

{% set pageTitle = "Thank you for your feedback" %}
{% block pageTitle %}{{ pageTitle }} - GOV.UK{% endblock %}

{% block header %}
  {{ govukHeader({
    productName: "Verify"
  }) }}
{% endblock %}

{% block content %}
  <div class="govie-grid-row">
    <div class="govie-grid-column-two-thirds">
      {{ govukPanel({
        titleText: pageTitle
      }) }}
    </div>
  </div>
{% endblock %}
